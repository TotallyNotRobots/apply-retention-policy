{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "bazel"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "bazel dependencies (non-major)"
    }
  ],
  "bazel": {
    "enabled": true,
    "managerFilePatterns": [
      "/MODULE.bazel/"
    ]
  }
}
