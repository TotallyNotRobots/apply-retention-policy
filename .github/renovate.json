{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "bazel": {
    "enabled": true,
    "managerFilePatterns": [
      "/^MODULE\\.bazel$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^MODULE\\.bazel$"],
      "matchStrings": [
        "GOLANGCI_LINT_VERSION = \"(?<currentValue>[^\"]+)\"",
        "GOLANGCI_LINT_SHA256 = \"(?<currentDigest>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "golangci/golangci-lint",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "autoReplaceStringTemplate": "GOLANGCI_LINT_VERSION = \"{{newValue}}\"\nGOLANGCI_LINT_SHA256 = \"{{newDigest}}\"",
      "digestTemplate": "{{newDigest}}"
    }
  ]
}
